{% extends 'base-admin.html.twig' %}

{% block title %}Podcast{% endblock %}

{% block body %}
    <a href="{{ path('admin_podcast_index') }}" class="btn btn-dark mb-3">Retour à la liste</a>
    <h1>Podcast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ podcast.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ podcast.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ podcast.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ podcast.imageName }}</td>
            </tr>
            <tr>
                <th>Mise à jour le</th>
                <td>{{ podcast.updatedAt ? podcast.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ podcast.detail }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ podcast.video }}</td>
            </tr>
            <tr>
                <th>ImageArticle</th>
                <td>{{ podcast.imageArticle }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-end">
    {{ include('admin_podcast/_delete_form.html.twig') }}
    <a href="{{ path('admin_podcast_edit', {'id': podcast.id}) }}" class="btn btn-success "><i class="align-middle" data-feather="edit-2"></i></a>
    </div>

{% endblock %}
