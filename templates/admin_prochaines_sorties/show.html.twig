{% extends 'base-admin.html.twig' %}

{% block title %}Prochaines Sorties{% endblock %}

{% block body %}
<a href="{{ path('admin_prochaines_sorties_index') }}" class="btn btn-dark mb-3">Retour à la liste</a>
    <h1>Prochaines Sorties</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prochaines_sorty.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ prochaines_sorty.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ prochaines_sorty.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ prochaines_sorty.imageName }}</td>
            </tr>
            <tr>
                <th>Mise à jour le</th>
                <td>{{ prochaines_sorty.updatedAt ? prochaines_sorty.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ prochaines_sorty.detail }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ prochaines_sorty.video }}</td>
            </tr>
            <tr>
                <th>ImageArticle</th>
                <td>{{ prochaines_sorty.imageArticle }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-end">
    {{ include('admin_prochaines_sorties/_delete_form.html.twig') }}
    <a href="{{ path('admin_prochaines_sorties_edit', {'id': prochaines_sorty.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
    </div>

{% endblock %}
