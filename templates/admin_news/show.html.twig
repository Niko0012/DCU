{% extends 'base-admin.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <a href="{{ path('admin_news_index') }}" class="btn btn-dark mb-3">Retour à la liste</a>
    <h1>News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ news.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ news.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ news.imageName }}</td>
            </tr>
            <tr>
                <th>Mise à jour le</th>
                <td>{{ news.updatedAt ? news.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ news.detail }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ news.video }}</td>
            </tr>
            <tr>
                <th>ImageArticle</th>
                <td>{{ news.imageArticle }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-end">
    {{ include('admin_news/_delete_form.html.twig') }}
    <a href="{{ path('admin_news_edit', {'id': news.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
    </div>

{% endblock %}
