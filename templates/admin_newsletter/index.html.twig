{% extends 'base.html.twig' %}

{% block title %}Newsletter index{% endblock %}

{% block body %}
    <h1>Newsletter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumeroNews</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newsletter in newsletters %}
            <tr>
                <td>{{ newsletter.id }}</td>
                <td>{{ newsletter.numeroNews }}</td>
                <td>{{ newsletter.titre }}</td>
                <td>{{ newsletter.description }}</td>
                <td>
                    <a href="{{ path('admin_newsletter_show', {'id': newsletter.id}) }}">show</a>
                    <a href="{{ path('admin_newsletter_edit', {'id': newsletter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_newsletter_new') }}">Create new</a>
{% endblock %}
